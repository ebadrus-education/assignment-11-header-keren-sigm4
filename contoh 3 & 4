#include <iostream>

using namespace std;
string color (int r, int g, int b) {
    return "\003[38;2;" + to_string(r) + ";" + to_string(g) + ";" + to_string(b) + "m";
}

int main() {
    string text;
    cout << R"(

       .--.                   .---.
   .---|__|           .-.     |~~~|
.--|===|--|_          |_|     |~~~|--.
|  |===|  |'\     .---!~|  .--|   |--|
|%%|   |  |.'\    |===| |--|%%|   |  |
|%%|   |  |\.'\   |   | |__|  |   |  |
|  |   |  | \  \  |===| |==|  |   |  |
|  |   |__|  \.'\ |   |_|__|  |~~~|__|
|  |===|--|   \.'\|===|~|--|%%|~~~|--|
^--^---'--^    `-'`---^-^--^--^---'--' hjw

               )";
    int startR = 0, startG = 150, startB = 255;
    int endR = 0, endG = 255, endB = 100;

    int len = text.size();
for (int i = 0 ; i < len; i++) {
        float t = (float) i / (len - 1);
        int r = startR + t * (endR - startR);
        int g = startG + t * (endG - startG);
        int b = startB + t * (endB - startB);

    cout << color(r, g, b) << text[i];
    }
        cout << "\033[0m\n\n"; //reset warna

    cout << "Selamat datang di Sistem Informasi Perpustakaan Jendela Pustaka\n\n";
    cout << "Username login: ";
    string username;
    cin >> username;

}
